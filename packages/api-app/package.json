    "@varys/domain": "^0.2.2",
    "compression": "^1.7.4",
    "debug": "^4.1.1",
    "http-status-codes": "^1.4.0",
    "joiful": "^2.0.1",
    "knex": "^0.21.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
